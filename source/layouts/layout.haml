<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "<Write/Speak/Code> Conference for Women Developers"
    = stylesheet_link_tag "normalize", "application"
    %link{ href: "//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css", rel: "stylesheet", media: "screen", type: "text/css" }

  %body{:class => page_classes}
    .container-fluid.header_container
      .header.row-fluid
        .span10
          %a{ href: '/' }
            %img.logo{ src: '/images/writespeakcode_logo.png' }
          %h1.pull-left
            Write/Speak/Code
        .span2
          .info
            %ul.inline.social
              %li
                %a{ href: 'http://www.twitter.com/writespeakcode' }
                  %span.icon-twitter
              %li
                %a{ href: 'http://www.github.com/writespeakcode' }
                  %span.icon-github
              %li
                %a{ href: 'mailto:info@writespeakcode.com' }
                  %span.icon-envelope
            %img{ src: '/images/writespeakcode_details.png', width: '178', height: '21' }
      .row-fluid
        .span12
          %nav.navbar
            %a.btn.btn-navbar{ :"data-toggle" => "collapse", :"data-target" => "#main-nav" }
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar

            %a#subscribe-info.btn-navbar{ :"data-toggle" => "collapse", :"data-target" => "#subscribe-nav" }
              %span.icon-info-sign

            #main-nav.nav-collapse.collapse
              %ul.nav
                %li#nav-about
                  %a{ href: '/about.html' } About
                %li.divider-vertical
                %li#nav-register
                  %a{ href: '/register.html' } Register
                %li.divider-vertical
                %li#nav-schedule
                  %a{ href: '/schedule.html' } Schedule
                %li.divider-vertical
                %li#nav-sponsor
                  %a{ href: '/sponsor.html' } Sponsor

            #subscribe-nav.nav-collapse.collapse
              = partial 'mailchimp'

    .container-fluid
      .row-fluid
        #main.span10
          = yield

        .span2.sidebar
          %a.btn.btn-warning{ href: 'http://writespeakcode.ticketleap.com/writespeakcode/', target: '_blank' } 
            Register now!

          .details.what
            %strong what
            .detail
              %p
                Write/Speak/Code is a 3-day action-oriented conference 
                for women developers.
          .details.when
            %strong when
            .detail
              %p
                June 20-22, 2013
          .details.where
            %strong where
            %address.detail
              Pace University
              %br
              163 Williams Street
              %br
              New York, NY 10038
          .details.why
            %strong Why
            .detail
              %p
                Empowering ourselves and each other to become thought leaders, 
                conference speakers, and open source contributors.

    .row-fluid
      %footer.span12
        %ul.nav.inline
          %li
            &copy; Rebecca Miller-Webster
          %li
            %i.icon-heart
            Logo design by 
            McKenna Lowry
            and
            Maryanne Ko
        %p
          %a{ href: '/code-of-conduct.html' }
            Conference Code of Conduct


  %script{ src: "http://code.jquery.com/jquery.js" }
  = javascript_include_tag  "application"
